@using DocumentTrackingSystem.Models
@model tbl_Document
@{
    ViewBag.Title = "Receive";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <h1>Receiving Document</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Document")">Receiving Document</a></li>
            <li class="breadcrumb-item active">@ViewBag.Title</li>
        </ol>
    </nav>
</div>

<div class="row g-2">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="card-title">@ViewBag.Title</div>
                @using (Html.BeginForm("Create", "Document", FormMethod.Post, new { encType = "multipart/form-data" }))
                {
                    <div class="row mb-2 g-2">
                        @Html.Partial("Field")
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-12">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </div>
                }
                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
