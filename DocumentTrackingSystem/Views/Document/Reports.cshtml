@using DocumentTrackingSystem.Models
@model IEnumerable<tbl_Document>
@{
    ViewBag.Title = "Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <h1>@ViewBag.Title</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Dashboard</a></li>
            <li class="breadcrumb-item active">@ViewBag.Title</li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body">
        <div class="card-title">@ViewBag.Title</div>
        <div id="navControl" class="row mt-3">
            <div class="col-md-3">
                <div class="row">
                    <label class="col-md-5 col-form-label">Search By</label>
                    <div class="col-md-7">
                        <select id="searchType" class="form-select form-select-sm">
                            <option value="0">Date</option>
                            <option value="1">Office</option>
                            <option value="2">Document Type</option>
                            <option value="3">QR Code</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3" id="field">

                </div>
            </div>
        </div>
        <div id="report_data" class="table-responsive">
            
        </div>
    </div>
</div>


@section scripts {
    <script>
        var tableFormat = () => {
            $('#data').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'print'
                ],
                ordering: false,
                searching: false
            });
        }
      
        tableFormat();

        $('#searchType').on('change', () => {
            reportType();
            loadData($('#searchType option:selected').val(), $('input[name="Keyword"]').val(), $('input[name="From"]').val(), $('input[name="To"]').val());
        });

      
        var reportType = () => {
            if ($('#searchType option:selected').val() == 0) {
                $('#navControl  #field').html(`
                    <div class ="row g-2">
                        <div class ="col-md-6">
                            From <input id="From" type="date" class ="form-control" name="From" />
                        </div>
                        <div class ="col-md-6">
                            To <input id="To" type="date" class ="form-control" name="To" />
                        </div>
                    </div>
                    `);
            } else {
                $('#navControl  #field').html(`<input id="searchKeyword" type="search" class="form-control" name="Keyword" placeholder="Enter keyword here" />`);
            }
        }
        reportType();

       

        var loadData = (ReportType, Search, From, To) => {
            $.ajax({
                method:'post',
                url: '@Url.Action("Reports_Partial", "Document")',
                data: {
                    rt: ReportType,
                    CategoryName: Search,
                    OfficeName: Search,
                    QRCode: Search,
                    From: From,
                    To: To
                },
                dataType: 'html',
                beforeSend: () => {
                    $('#spinner').show();
                },
                success: (d) => {
                    $('#report_data').html(d);
                    tableFormat();
                    $('#spinner').hide();
                },
                error: () => {
                    $('#spinner').hide();
                }
            });
        }

        $('#navControl').on('keyup change', 'input[name="Keyword"], input[type="date"]', () => {
            loadData($('#searchType option:selected').val(), $('input[name="Keyword"]').val(), $('input[name="From"]').val(), $('input[name="To"]').val());
        });
    </script>
}